<p id="notice"><%= notice %></p>

<div class="card bg-white text-danger mt-3 mb-3 px-5 pt-3 pb-1 shadow">
  <div class="card-head">
    <div class="card-title">
      <h1>Usuários</h1>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-striped table-bordered" style="width:100%">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Login</th>
          <th>E-mail</th>
          <th>Cargo</th>
          <th>Nível de acesso</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.nome %></td>
            <td><%= user.login %></td>
            <td><%= user.email %></td>
            <td><%= user.cargo %></td>
            <td><%= user.nivel_acesso %></td>
            <td><%= link_to 'Visualizar', user, class: "btn btn-info" %></td>
            <td><%= link_to 'Editar', edit_user_path(user), class: "btn btn-success" %></td>
            <td><%= link_to 'Apagar', user, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <div class="shared">
      <%= link_to 'Cadastrar usuário', new_user_path %>
    </div>
  </div>
</div>
