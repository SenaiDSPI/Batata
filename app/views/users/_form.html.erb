<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome, label: "Nome", required: true, autofocus: true %>
    <%= f.input :login, label: "Login", required: true %>
    <%= f.input :email, label: "E-mail", required: true %>
    <%= f.input :cargo, label: "Cargo", required: true %>
    <%= f.input :telefone, label: "Telefone", required: true %>
    <%= f.input :nivel_acesso ,as: :select, collection: [['0', 'Requerente'], ['1', 'Almoxarife'], ['2', 'Admin']], label_method: :second, value_method: :second, prompt: "Escolha o tipo:", required: "required" %>
    <%= f.input :password, label: "Senha", required: true, hint: ("MÃ­nimo de 6 caracteres") %>
    <%= f.input :password_confirmation, label: "Confirmar senha", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar", class: "btn btn-success" %>
  </div>
<% end %>
