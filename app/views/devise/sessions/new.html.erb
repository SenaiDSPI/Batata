<div class="card bg-white text-danger mt-3 mb-3 px-5 pt-3 pb-1 shadow">
  <div class="card-title">
    <h2>Login</h2>
  </div>
  
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :login, label: "Login", required: true, autofocus: true %>
        <%= f.input :password, label: "Senha", required: true %>
        <%= f.input :remember_me, label: "Permanecer ativo", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Entrar", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
