<div class="card bg-dark text-white mt-3 mb-3 px-5 pt-3 pb-3 shadow">
  <div class="card-title">
    <h2>Login</h2>
  </div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "E-mail", required: true, autofocus: true %>
    <%= f.input :password, label: "Senha", required: true %>
    <%= f.input :remember_me, label: "Permanecer ativo", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
        <%= f.button :submit, "Entrar", class: "btn btn-success" %>
      </div>

      <div class="shared">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
