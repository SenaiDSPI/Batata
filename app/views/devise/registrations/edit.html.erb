<div class="card bg-white text-danger mt-3 mb-3 px-5 pt-3 pb-1 shadow">
  <div class="card-head">
    <div class="card-title">
      <h2>Editar informações</h2>
    </div>
  </div>

  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :nome, label: "Nome", required: true, autofocus: true %>
        <%= f.input :login, label: "Login", required: true %>
        <%= f.input :email, required: true %>
        <%= f.input :telefone, label: "Telefone", required: true %>
        <%= f.input :password, label: "Senha", hint: "Se não deseja modifica sua senha, não preencha este campo.", required: false, input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: "Confirmar senha",hint: "Se não deseja modifica sua senha, não preencha este campo.", required: false, input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password, label: "Senha atual", hint: "Precisamos que digite sua senha para confirmar suas modificações.", required: true, input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>
    <!--
      Cancel accont < %= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    -->
  </div>

  <%= link_to "Back", :back %>
</div>
