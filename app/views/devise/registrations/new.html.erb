<div class="card bg-dark text-white mt-3 mb-3 px-5 pt-3 pb-1 shadow">
  <div class="card-head">
    <div class="card-title">
      <h2>Registrar-se</h2>
    </div>
  </div>

  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :nome, label: "Nome", required: true, autofocus: true %>
        <%= f.input :login, label: "Login", required: true %>
        <%= f.input :email, label: "E-mail", required: true %>
        <%= f.input :cargo, label: "Cargo", required: true %>
        <%= f.input :telefone, label: "Telefone", required: true %>
        <%= f.input :nivel_acesso, label: "NÃ­vel de acesso", required: true %>
        <%= f.input :password, label: "Senha", required: true, hint: ("MÃ­nimo de #{@minimum_password_length} caracteres") %>
        <%= f.input :password_confirmation, label: "Confirmar senha", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Cadastrar", class: "btn btn-success" %>
      </div>

      <div class="shared">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>

