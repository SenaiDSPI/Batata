<p id="notice"><%= notice %></p>

<div class="card bg-white text-danger mt-3 mb-3 px-5 pt-3 pb-1 shadow">
  <div class="card-head">
    <div class="card-title">
      <h1>Produto</h1>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-striped table-bordered" style="width:100%">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tipo</th>
          <th>Linha</th>
          <th>Coluna</th>
          <th>Validade</th>
          <th>Quantidade atual</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @produtos.each do |produto| %>
          <tr>
            <td><%= produto.nome %></td>
            <% if produto.tipo %>
              <td>Reutilizável</td>
            <% else %>
              <td>Consumível</td>
            <% end %>
            <td><%= produto.linha %></td>
            <td><%= produto.coluna %></td>
            <% if !produto.validade.nil? and produto.validade != "" %>
              <td><%= produto.validade.strftime("%d/%m/%Y") %></td>
            <% else %>
              <td></td>
            <% end %>
            <td><%= produto.quantidade_atual %></td>
            <td><%= link_to 'Visualizar', produto, class: "btn btn-info" %></td>
            <td><%= link_to 'Editar', edit_produto_path(produto), class: "btn btn-success" %></td>
            <td><%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <div class="shared">
      <%= link_to 'Adicionar produto', new_produto_path %>
    </div>
  </div>
</div>
