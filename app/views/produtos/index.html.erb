<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Peso</th>
      <th>Linha</th>
      <th>Coluna</th>
      <th>Validade</th>
      <th>Quantidade minima</th>
      <th>Quantidade maxima</th>
      <th>Quantidade atual</th>
      <th>Codigo barra</th>
      <th>Data entrada</th>
      <th>Ultima entrada</th>
      <th>Ultima retirada</th>
      <th>Ultima devolucao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.tipo %></td>
        <td><%= produto.peso %></td>
        <td><%= produto.linha %></td>
        <td><%= produto.coluna %></td>
        <td><%= produto.validade %></td>
        <td><%= produto.quantidade_minima %></td>
        <td><%= produto.quantidade_maxima %></td>
        <td><%= produto.quantidade_atual %></td>
        <td><%= produto.codigo_barra %></td>
        <td><%= produto.data_entrada %></td>
        <td><%= produto.ultima_entrada %></td>
        <td><%= produto.ultima_retirada %></td>
        <td><%= produto.ultima_devolucao %></td>
        <td><%= link_to 'Show', produto %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

