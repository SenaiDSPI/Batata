<p id="notice"><%= notice %></p>

<h1>Produtos</h1>
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Linha</th>
      <th>Coluna</th>
      <th>Validade</th>
      <th>Quantidade atual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.tipo %></td>
        <td><%= produto.linha %></td>
        <td><%= produto.coluna %></td>
        <td><%= produto.validade %></td>
        <td><%= produto.quantidade_atual %></td>
        <td><%= link_to 'Visualizar', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

