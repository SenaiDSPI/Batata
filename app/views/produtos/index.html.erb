<p id="notice"><%= notice %></p>

<div class="card bg-white text-danger mt-3 mb-3 px-5 pt-3 pb-1 shadow">
  <div class="card-head">
    <div class="card-title">
      <h1>Produtos</h1>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-striped table-bordered" style="width:100%">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tipo</th>
          <th>Linha</th>
          <th>Coluna</th>
          <th>Validade</th>
          <th>Quantidade atual</th>
          <th colspan="3" class="text-center h5">
            <%= link_to new_produto_path, class: "ml-auto" do %>
              <i class="fas fa-plus text-danger"></i>
            <% end %>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @produtos.each do |produto| %>
          <tr>
            <td><%= produto.nome %></td>
            <% if produto.tipo %>
              <td>Reutilizável</td>
            <% else %>
              <td>Consumível</td>
            <% end %>
            <td><%= produto.linha %></td>
            <td><%= produto.coluna %></td>
            <% if !produto.validade.nil? and produto.validade != "" %>
              <td><%= produto.validade.strftime("%d/%m/%Y") %></td>
            <% else %>
              <td></td>
            <% end %>
            <td><%= produto.quantidade_atual %></td>
            <td class="text-center px-1"><%= link_to produto do %><i class="fas fa-info text-danger"></i><% end %></td>
            <td class="text-center px-0"><%= link_to edit_produto_path(produto) do %><i class="fas fa-pen text-danger"></i><% end %></td>
            <td class="text-center px-1"><%= link_to produto, method: :delete, data: { confirm: 'Você tem certeza?' } do %><i class="fas fa-times text-danger"></i><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
