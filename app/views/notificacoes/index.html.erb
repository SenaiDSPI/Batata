<div class="card bg-white text-danger mt-3 mb-3 px-5 pt-3 pb-1 shadow">
  <div class="card-head">
    <div class="card-title">
      <h1>Notificações</h1>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-striped table-bordered" style="width:100%">
      <thead>
        <tr>
          <th>Título</th>
          <th>Mensagem</th>
          <th>Cod</th>
          <th>Tipo</th>
          <th colspan="3" class="text-center h5">
            <%= link_to new_notificacao_path, class: "ml-auto" do %>
              <i class="fas fa-plus text-danger"></i>
            <% end %>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @notificacoes.each do |notificacao| %>
          <tr>
            <td><%= notificacao.titulo %></td>
            <td><%= notificacao.mensagem %></td>
            <td><%= notificacao.cod %></td>
            <td><%= notificacao.tipo %></td>
            <td class="text-center px-1"><%= link_to notificacao, title: "Detalhes" do %><i class="fas fa-info text-danger"></i><% end %></td>
            <td class="text-center px-0"><%= link_to edit_notificacao_path(notificacao), title: "Editar" do %><i class="fas fa-pen text-danger"></i><% end %></td>
            <td class="text-center px-1"><%= link_to notificacao, method: :delete, data: { confirm: 'Você tem certeza?' }, title: "Apagar" do %><i class="fas fa-times text-danger"></i><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
