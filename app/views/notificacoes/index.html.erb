<p id="notice"><%= notice %></p>

<h1>Notificacoes</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Mensagem</th>
      <th>Cod</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notificacoes.each do |notificacao| %>
      <tr>
        <td><%= notificacao.titulo %></td>
        <td><%= notificacao.mensagem %></td>
        <td><%= notificacao.cod %></td>
        <td><%= notificacao.tipo %></td>
        <td><%= link_to 'Show', notificacao %></td>
        <td><%= link_to 'Edit', edit_notificacao_path(notificacao) %></td>
        <td><%= link_to 'Destroy', notificacao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notificacao', new_notificacao_path %>
